	<modelVersion>4.0.0</modelVersion>
	<properties>
		<pipeline.version>1.0</pipeline.version>
		<unitils.version>3.3</unitils.version>
		<db.version.postgresql>9.1-901.jdbc4</db.version.postgresql>
